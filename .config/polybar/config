[colors]
background = ${xrdb:background}
foreground = ${xrdb:color7}
foreground-alt = #444
color1 = ${xrdb:color1}
color2 = ${xrdb:color2}
color3 = ${xrdb:color3}
color4 = ${xrdb:color4}
color5 = ${xrdb:color5}
color6 = ${xrdb:color6}

[bar/mainpanel]
monitor = eDP-1
width = 98%
height = 30
offset-x = 1%
offset-y = 1%
radius = 1.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 2
border-color = ${colors.color1}

padding = 2
module-margin = 1

; Primary font
font-0 = "FantasqueSansMono Nerd Font:pixelsize=13:style=bold;3"
; Icons font
font-1 = "FantasqueSansMono Nerd Font:pixelsize=14:style=bold;2"
; Special sized font
font-2 = "FantasqueSansMono Nerd Font:pixelsize=20:style=bold;3"

modules-left = volume wlan
modules-center = bspwm
modules-right = xkeyboard temperature battery time powermenu

tray-position = left
tray-padding = 2
tray-transparent = true
;tray-background = #0063ff

wm-restack = bspwm

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

; [module/xwindow]
; type = internal/xwindow
; label = %title:0:20:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = caps lock

format-prefix = " "
format-prefix-font = 2
format-prefix-foreground = ${colors.color4}

label-layout = %layout%

label-indicator = 
label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.color1}
;label-indicator-foreground = ${colors.color6}


[module/bspwm]
type = internal/bspwm

;Show all workspaces
pin-workspaces = false

ws-icon-0 = 0;
ws-icon-1 = 1;
ws-icon-2 = 2;
ws-icon-3 = 3;
ws-icon-4 = 4;
ws-icon-5 = 5;

label-focused = %icon%
label-focused-font = 2
label-focused-background= ${colors.color1}
label-focused-padding = 2

label-occupied = %icon%
label-occupied-font = 2
label-occupied-padding = 2

label-urgent = %icon%!
label-urgent-font = 2
label-urgent-background = ${colors.color3}
label-urgent-padding = 2

label-empty = %icon%
label-empty-font = 2
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/wlan]
type = internal/network
interface = wlp5s0
interval = 1.0

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%

format-disconnected = <label-disconnected>
label-disconnected = 
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 﨔
ramp-signal-2 = 
ramp-signal-foreground = ${colors.color3}
ramp-signal-font = 2

[module/time]
type = internal/date
interval = 1

time = %H:%M
time-alt = "%H:%M:%S  %A, %d of %B %Y"

format-prefix = " "
format-prefix-font = 2
format-prefix-foreground = ${colors.color3}

label = %time%

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <bar-volume>

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-4 = 
ramp-volume-5 = 
ramp-volume-foreground = ${root.foreground}
ramp-volume-font = 2

format-muted = <label-muted>
format-muted-foreground = ${colors.foreground-alt}
label-muted = 婢

bar-volume-width = 15
bar-volume-foreground-0 = ${colors.color2}
bar-volume-foreground-1 = ${colors.color2}
bar-volume-foreground-2 = ${colors.color2}
bar-volume-foreground-3 = ${colors.color2}
bar-volume-foreground-4 = ${colors.color2}
bar-volume-foreground-5 = ${colors.color3}
bar-volume-foreground-6 = ${colors.color4}
bar-volume-gradient = false
;bar-volume-indicator = |
bar-volume-indicator = ─
bar-volume-indicator-font = 3
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 100

format-charging = <animation-charging> <label-charging>

format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix = " "
format-full-prefix-foreground = ${colors.color4}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.color4}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
hwmon-path = /sys/devices/virtual/hwmon/hwmon2/temp1_input
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature%
label-warn = "%temperature% !"
label-warn-foreground = #E53935

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.color3}
ramp-font = 2

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.color2}
label-open-font = 2
label-close = 
label-close-foreground = ${colors.color2}
label-close-font = 2

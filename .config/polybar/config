menu-0-0 = 
menu-0-0-font = 2
menu-0-0-exec = reboot
menu-0-1 = 
menu-0-1-font = 2
menu-0-1-exec = ~/Scripts/logout.sh
menu-0-2 = ⏻
menu-0-2-font = 2
menu-0-2-exec = poweroff

[settings]
